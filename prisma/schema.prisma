generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Match {
  id     String  @id @default(uuid())
  map    String
  rounds Round[]
  halves Half[]
  winner String
}

model Half {
  id            String  @id @default(uuid())
  matchId       String
  match         Match   @relation(fields: [matchId], references: [id])
  terroristTeam String
  ctTeam        String
  rounds        Round[]
}

model Round {
  id        String @id @default(uuid())
  number    Int
  winner    String
  matchId   String
  match     Match  @relation(fields: [matchId], references: [id])
  halfId    String
  half      Half   @relation(fields: [halfId], references: [id])
  winMethod String
}
